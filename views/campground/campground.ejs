<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/map.css">
    <div id="cluster-map"></div>
    <h1>List of Campgrounds</h1>
    <div>
        <a class="btn btn-info mb-2" href="/campgrounds/new">Add a Campground</a>
    </div>
    <% for(let camp of camps){ %>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <%if(camp.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dlidkqqhr/image/upload/v1619042389/Yelp-camp/iq7ndpxhqj67cta4d4zy.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script type="">
            const token = '<%-process.env.MAPBOX_TOKEN%>'
            const camps = {features: <%-JSON.stringify(camps)%>}
            </script>
            <script src="/js/clusters.js"></script>